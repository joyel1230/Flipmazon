<section>
    <div class="container">
      <div class="d-flex justify-content-end mt-4">
            <a href="/admin/add-product" class="btn btn-success">Add product</a>
        </div>
        
        <table class="table col-12" >
  <thead >
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr >
      {{!-- {{#if @index}} --}}
      <td scope="row" class="indexId">{{@index}}</td>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img width="50px" height="50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item? Name:{{this.name}}')">Delete</a></td>
      {{!-- {{/if}} --}}
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
var ind=document.getElementsByClassName('indexId')
for (var i = 0; i < ind.length; i++) {
ind[i].innerHTML=i+1
}
</script>
