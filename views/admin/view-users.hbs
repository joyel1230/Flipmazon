<section>
    <div class="container">
        <table class="table col-12" >
  <thead >
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <hr>
    {{#each users}}
    <tr >
      {{!-- {{#if @index}} --}}
      <td scope="row" class="indexId">{{@index}}</td>
      
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td><a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user? Name:{{this.name}}')">Delete</a></td>
        {{!-- {{/if}}     --}}
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
var ind=document.getElementsByClassName('indexId')
for (var i = 0; i < ind.length; i++) {
ind[i].innerHTML=i+1
}
</script>
